<h1>Publictions Administrator</h1>

<%= link_to 'New Publication', new_publication_path, class: 'btn btn-default' %>
<%= link_to 'Back to normal', publications_path, class: 'btn btn-default' %>
<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Author</th>
      <th>Drop</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.author%></td>
        <td><%= publication.drop  %></td>
        <td><%= truncate(publication.body, length: 1000, separator: ' ') %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication), class: 'btn btn-info'  %></td>
        <td><%= link_to 'Destroy', publication,
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
